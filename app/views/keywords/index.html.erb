<% if user_signed_in? %>
  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
<% else %>
  <%= link_to "Only for admin", new_user_session_path, class: "nav-link" %>
<% end %>

<h1 class="header-title">Web developpement Glosssary</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col">
      <div data-controller="refresh-list">
        <%= form_with url: keywords_path, method: :get, html: { class: 'mb-5 stick-bar', data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                           class: "keyword-form",
                           placeholder: 'Type a keyword',
                           value: params[:query],
                           data: {
                            refresh_list_target: 'searchInput',
                            action: "keyup->refresh-list#update"
                          } %>
          <%= link_to do %>
            <i class="fa fa-search"></i>
          <% end %>
        <% end %>
        <%= render 'list', keywords: @keywords %>
      </div>
    </div>
  </div>
</div>
