<h2 class="mt-4 mb-2 text-white">ONLY FOR ADMIN !!</h2>
<p class="mb-5">Ask admin for the access</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "container mt-5 pt-5"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-secondary mt-5' %>
  </div>
<% end %>

<%= link_to 'Back', keywords_path, class: 'nav-link mb-5' %>
